<h1 class="text-center">Add a restaurant</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category, collection: Restaurant::CATEGORIES, include_blank: "Select"%>
        <%= f.input :phone %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>


